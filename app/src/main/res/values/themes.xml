<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyNoteApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/titleColor</item>
        <item name="colorAccent">@color/titleColor</item>
        <item name="android:windowBackground">#1B1B1B</item>

        <!-- FAB simge rengi -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

        <!-- METİN SEÇİM RENGİ -->
        <item name="colorControlActivated">@color/selectionColor</item>
        <item name="android:textColorHighlight">@color/selectionColor</item>
        <item name="colorSecondaryContainer">@color/selectionColor</item>


    </style>

    <style name="CustomAlertDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:background">#222222</item>  <!-- Arka plan rengi -->
        <item name="android:textColorPrimary">#FFFFFF</item>  <!-- Başlık ve mesaj metni rengi -->
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>  <!-- Pozitif buton için stil -->
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>  <!-- Negatif buton için stil -->
    </style>

    <style name="CustomDialogButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#FFFF00</item>  <!-- Buton rengi sarı -->
    </style>

    <style name="Theme.MyNoteApp" parent="Base.Theme.MyNoteApp" />
</resources>